<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="10dp"
    android:layout_margin="15dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_weight="3"
        android:background="@color/box_one"
        android:src="@drawable/bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvJudulNovel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menanti Hari Berganti"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/tvTahunDanPengarang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020-10-01  | Titi sandrina"
            android:textSize="11dp"
            tools:ignore="TextSizeCheck" />
        <TextView
            android:id="@+id/tvSinopsis"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deskripsi sinopsis disini  deskripsi deskripsi sinopsis disini sinopsis disini "/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/cardview_default_elevation"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_library_books_24"/>
                <TextView
                    android:id="@+id/tvGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Romance"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_comment_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chapter" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/black"/>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>